generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  en_attente
  acceptee
  refusee
  annulee
}

model DemandeStage {
  id         Int      @id @default(autoincrement())
  nom        String
  prenom     String
  email      String
  service    String
  dateDebut  DateTime
  dateFin    DateTime
  motivation String?        // optionnel
  status     Status  @default(en_attente)
  createdAt  DateTime @default(now())
}